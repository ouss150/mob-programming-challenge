<ul id="parties" class="list">
    {{#each parties}}
    <li class="item party">
        <h3 class="title small">{{this.name}} ({{this.theme}})</h3>
        <p>{{format-date this.date}}</p>
        <div class="row">
            <a class="fas fa-laugh-beam fa-lg" href="/party/{{this._id}}"></a>
            <a class="fa fa-pen fa-lg" href="/party/update/{{this._id}}"></a>
        </div>
    </li>
    {{/each}}
</ul>